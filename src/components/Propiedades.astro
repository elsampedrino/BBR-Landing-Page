const propiedades = [
  {
    id: 1,
    titulo: "Casa en Country",
    ubicacion: "Zona Norte, Buenos Aires",
    precio: "USD 450.000",
    tipo: "Venta",
    ambientes: 5,
    metros: 320,
    imagen: "https://images.unsplash.com/photo-1600596542815-ffad4c1539a9?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
  },
  {
    id: 2,
    titulo: "Departamento Premium",
    ubicacion: "Puerto Madero, CABA",
    precio: "USD 380.000",
    tipo: "Venta",
    ambientes: 3,
    metros: 150,
    imagen: "https://images.unsplash.com/photo-1502672260266-1c1ef2d93688?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
  },
  {
    id: 3,
    titulo: "PH Reciclado",
    ubicacion: "Palermo, CABA",
    precio: "$850.000/mes",
    tipo: "Alquiler",
    ambientes: 2,
    metros: 85,
    imagen: "https://images.unsplash.com/photo-1600607687939-ce8a6c25118c?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
  },
  {
    id: 4,
    titulo: "Local Comercial",
    ubicacion: "Microcentro, CABA",
    precio: "USD 180.000",
    tipo: "Venta",
    ambientes: 1,
    metros: 120,
    imagen: "https://images.unsplash.com/photo-1497366216548-37526070297c?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
  },
  {
    id: 5,
    titulo: "Oficina AAA",
    ubicacion: "Catalinas, CABA",
    precio: "$1.200.000/mes",
    tipo: "Alquiler",
    ambientes: 4,
    metros: 200,
    imagen: "https://images.unsplash.com/photo-1497366811353-6870744d04b2?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
  },
  {
    id: 6,
    titulo: "Terreno",
    ubicacion: "Pilar, Buenos Aires",
    precio: "USD 95.000",
    tipo: "Venta",
    ambientes: 0,
    metros: 800,
