// VentasLotes component - BBR Grupo Inmobiliario
// Lotes/Terrenos en Venta desde el catálogo de propiedades

const lotesVenta = [
  {
    id: "PROP-028",
    tipo: "terreno",
    operacion: "venta",
    titulo: "Terreno Venta - Ramallo",
    direccion: { calle: "Av. Mitre al 200 esq. Soldado Argentino", barrio: "Ramallo", ciudad: "Ramallo" },
    precio: { valor: 110000, moneda: "USD" },
    descripcion: "Excelente terreno de 10 x 25 mts. en inmejorable y estratégica zona de la ciudad. Ideal para proyecto de inversión, como locales comerciales, gastronómicos o edificio habitacional entre otros.",
    fotos: [
      "https://res.cloudinary.com/dikb9wzup/image/upload/v1766830498/bbr/prop-028/foto01.jpg",
      "https://res.cloudinary.com/dikb9wzup/image/upload/v1766830500/bbr/prop-028/foto02.jpg",
      "https://res.cloudinary.com/dikb9wzup/image/upload/v1766830502/bbr/prop-028/foto03.jpg"
    ],
    caracteristicas: { superficie_total: "250 m²" }
  },
  {
    id: "PROP-029",
    tipo: "terreno",
    operacion: "venta",
    titulo: "Terreno Venta - Villa Ramallo",
    direccion: { calle: "20 de Junio al 700", barrio: "Villa Ramallo", ciudad: "Villa Ramallo" },
    precio: { valor: 10000, moneda: "USD" },
    descripcion: "Excelente lote de 10 x 35 mts, ubicado sobre calle 20 de Junio al 700, barrio Don Antonio, Villa Ramallo. Hermosos y tranquilo barrio. Se encuentra ubicado a 5 min del centro de Villa Ramallo.",
    fotos: [
      "https://res.cloudinary.com/dikb9wzup/image/upload/v1766830504/bbr/prop-029/foto01.jpg",
      "https://res.cloudinary.com/dikb9wzup/image/upload/v1766830507/bbr/prop-029/foto02.jpg",
      "https://res.cloudinary.com/dikb9wzup/image/upload/v1766830509/bbr/prop-029/foto03.jpg"
    ],
    caracteristicas: { superficie_total: "350 m²" }
  },
  {
    id: "PROP-030",
    tipo: "terreno",
    operacion: "venta",
    titulo: "Terreno Venta - El Paraiso",
    direccion: { calle: "Soto y Calvo y F. Olmedo", barrio: "El Paraiso", ciudad: "Ramallo" },
    precio: { valor: 35000, moneda: "USD" },
    descripcion: "Excelente lote de 17,90 x 26,00 mts. Posee una casa con posibilidad seguir construyendo y ampliando. Cuenta con los servicios de agua y luz.",
    fotos: [
      "https://res.cloudinary.com/dikb9wzup/image/upload/v1766830511/bbr/prop-030/foto01.jpg",
      "https://res.cloudinary.com/dikb9wzup/image/upload/v1766830514/bbr/prop-030/foto02.jpg"
